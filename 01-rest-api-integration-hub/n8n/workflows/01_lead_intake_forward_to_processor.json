    },
    {
      "parameters": {
        "functionCode": "const crypto = require('crypto');\nconst payload = $node['Webhook'].json.body || {};\nconst bodyString = JSON.stringify(payload);\nconst secret = process.env.WEBHOOK_HMAC_SECRET || 'replace-with-strong-secret';\nconst timestamp = Math.floor(Date.now() / 1000).toString();\nconst signingString = `${timestamp}.${bodyString}`;\nconst signature = `sha256=${crypto.createHmac('sha256', secret).update(signingString).digest('hex')}`;\nreturn [{ json: { payload, bodyString, timestamp, signature } }];"
      },
      "type": "n8n-nodes-base.function",
      "typeVersion": 1,
      "position": [
        200,
        0
      ],
      "id": "function-add-headers",
      "name": "Add Headers"
    },
    {
