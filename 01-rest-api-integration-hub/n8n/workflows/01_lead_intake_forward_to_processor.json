        "url": "http://processor:8000/webhook/lead",
        "sendHeaders": true,
        "headerParameters": {
          "parameters": [
            {
              "name": "X-Idempotency-Key",
              "value": "={{$node['Webhook'].json['body']['idempotency_key'] || 'n8n-' + Date.now()}}"
            },
            {
              "name": "X-Source",
              "value": "n8n"
            },
            {
              "name": "X-Timestamp",
              "value": "={{$node['Add Headers'].json['timestamp']}}"
            },
            {
              "name": "X-Signature",
              "value": "={{$node['Add Headers'].json['signature']}}"
            }
          ]
        },
        "sendBody": true,
        "bodyContentType": "raw",
        "rawBody": "={{$node['Add Headers'].json['bodyString']}}",
        "options": {
          "fullResponse": true
        }
      },
      "type": "n8n-nodes-base.httpRequest",
